
{% extends "SignupBundle::layout.html.twig" %}

{% block title %}SignupBundle:Register:register{% endblock %}

{% block page %}
    <div class="container">
        <div class="container">
            {# Traduction en internationnale#}
            <h1>{{ 'register'|trans }}</h1>
            <div class="col-lg-3"></div>
            <div class="col-lg-6">
                {{ form_start(form) }}
                {{ form_widget(form.email) }}
                {{ form_errors(form.email) }}
                {{ form_widget(form.password) }}
                {{ form_errors(form.password) }}
                <input id="btnform" type="submit" value="Inscription" />
                {{ form_end(form) }}

            </div>

            <div class="col-lg-3"></div>
        </div>
    </div>

{% endblock %}
